<!DOCTYPE html>
<html>
  <head>
    <title>ERGBuild</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'contact_app/index' %>
    <%= stylesheet_pack_tag 'contact_app/assets/stylesheets/app' %>
  </head>

  <script type="text/javascript" language="javascript">
    window.ERGBuild = {};
    window.ERGBuild.env = "<%= Rails.env %>";
    window.ERGBuild.current_user = {
      id: '<%= @current_user&.id %>',
      email: '<%= @current_user&.email %>'
    };
  </script>

  <body>
    <%= render 'devise/menu/header' %>
    <%= yield %>
  </body>
</html>
