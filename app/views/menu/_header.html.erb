<header class="main_header">
  <h1 class='erg_leads ui header'>
    <div class='content'>
      ERG Contact Book
      <div class='sub header'>Managing contacts your way.</div>
    </div>
  </h1>
  <div class="login_menu">
    <% if user_signed_in? %>
    <h4 class='ui header'><%= @current_user&.email %></h4>
    <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'ui button blue') %>
    <% else %>
    <span></span>
    <%= link_to('Login', new_user_session_path, class: 'ui button blue')  %>
    <% end %>
  </div>
</header>
