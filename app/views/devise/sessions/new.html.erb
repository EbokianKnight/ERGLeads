<div class="devise_form_container">
  <h2 class='ui header'>Log in</h2>
  <%= render 'menu/notices' %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'ui form login_form' }) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <div class="ui checkbox">
        <%= f.check_box :remember_me, class: 'hidden', readonly: '', tabindex: '' %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'ui button blue' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
