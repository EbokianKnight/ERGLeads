<div class="devise_form_container">
  <h2 class='ui header'>Resend unlock instructions</h2>
  <%= render 'menu/notices' %>
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'ui form login_form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: 'ui button blue' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
