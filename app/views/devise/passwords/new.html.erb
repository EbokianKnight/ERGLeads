<div class="devise_form_container">
  <h2 class='ui header'>Forgot your password?</h2>
  <%= render 'menu/notices' %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'ui form login_form' }) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    <%= devise_error_messages! %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'ui button blue' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
